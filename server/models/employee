var mongoose = require('mongoose');

var employee = mongoose.model('employee_details', {
  first_name: {
    type: String,
    required: true,
    minlength: 1,
    trim: true
  },
  last_name: {
    type: String,
    required: true,
    minlength: 1,
    trim: true
  },
  is_deleted: {
    type: Boolean,
    default: false
  },
  email_id: {
    type: String,
    required: true,
    minlength: 1,
    trim: true
  },
  mobile_no: {
    type: Number,
    required: true
  },
  password: {
    type: String
  }
});

module.exports = {employee};
